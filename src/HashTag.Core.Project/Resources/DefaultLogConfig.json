{
    "ConfigKeyMapping": [

        { "HashTag.Application.Name": "Name" },
        { "HashTag.Application.Environment": "Environment" }
    ],

    "EventProcessor": {
        "$comment": "You need one, and only one, IEventProcessor configured in any configuration",
        "Type": "HashTag.Diagnostics.LogEventProcessor, HashTag.Core",
        "Config": {
            "$type": "HashTag.Diagnostics.LogEventProcessorSettings, HashTag.Core",
            "processor": {
                "$type": "HashTag.Diagnostics.LogEventProcessorBufferSettings, HashTag.Core",
                "bufferBlockSize": 300,
                "bufferSweepMs": 1000,
                "cacheTimeOutMs": 1000,
                "bufferWriteTimeOutMs": 10000,
                "forceFlushFilters": [
                    {
                        "$type": "HashTag.MVC.Elmah.RestClientDemo.Controllers.TestFilter, HashTag.MVC.Elmah.RestClientDemo"
                    }
                ]
            },
            "pipeline": [
                {
                    "$type": "HashTag.Diagnostics.TestWriter, HashTag.Core",
                    "onError": [
                        "write to somewhere"
                    ],
                    "onSuccess": null,
                    "name": "my name",
                    "config": {
                        "connectionStringName": "name is something"
                    }
                }
            ]
        }
    }
}
