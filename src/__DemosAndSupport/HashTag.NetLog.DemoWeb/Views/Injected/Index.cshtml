@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <h2>Check output for log entries from service</h2>
        <h3><a href="" id="demoClick">Click to make ajax/api call</a></h3>
        <h4 id="apiResult"></h4>
        <h3><a href="" id="errorClick">Click to make error ajax/api call - elmah writer</a></h3>
        <h4 id="errorResult"></h4>
        <h3><a href="" id="error2Click">Click to make error ajax/api call - default writer</a></h3>
        <h4 id="errorResult2"></h4>
    </div>
    @Scripts.Render("/bundles/jquery")
    <script src="@Url.Content("~/Scripts/demo.js")"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#demoClick').click(function (e) {
                doApiCall(e);

            });
            $('#errorClick').click(function (e) {
                doErrorCall(e);

            });
            $('#error2Click').click(function (e) {
                doError2Call(e);

            });
        });
      
    </script>

</body>
</html>
