<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container row col-lg-12 body-content">
        <div class="row panel">
            <h1>Header</h1>
        </div>
        <div class="row panel col-lg-12">
            <div class="col-lg-3">
                side
            </div>
            <div class="col-lg-6">
                body
                @RenderBody()
            </div>
        </div>
        <div class="row col-lg-12">
          <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - HashTag.Net</p>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/LogServerScripts")
    @RenderSection("scripts", required: false)
</body>
</html>
